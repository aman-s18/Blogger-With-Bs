    <h1>Listing Blogs</h1>
     
    <table border="2px" class=".table-condensed">
      <tr>
        <th>Title:</th>
        <th>Category:</th>
        <th>Image:</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
     
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.category %></td>
          <td><%= image_tag blog.image_url(:medium).to_s %> </td>
          <td><%= blog.description %></td>
          <td><%= button_to 'Show', blog_path(blog), :method => 'get' %></td>
           <td><%=button_to 'Edit', edit_blog_path(blog), :method => 'get' %></td>
           <td><%= button_to 'Destroy', blog_path(blog),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>

        </tr>
      <% end %>
    </table>
    <br>
  <% if @blogs.blank? %>
  <h4>There are no Blogs containing the term <%= params[:search] %>.</h4>
